{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "Node16",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__",
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../compiler"
    }
  ]
}