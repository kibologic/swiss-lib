{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "Node16",
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    "**/*.d.ts.map"
  ]
}