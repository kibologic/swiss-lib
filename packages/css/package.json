{
    "name": "@swissjs/css",
    "version": "0.1.0",
    "description": "CSS and asset handling for Swiss framework",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./modules": {
            "import": "./dist/modules/index.js",
            "types": "./dist/modules/index.d.ts"
        },
        "./compiler": {
            "import": "./dist/compiler/index.js",
            "types": "./dist/compiler/index.d.ts"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsc -b",
        "dev": "tsc -b --watch",
        "test": "vitest",
        "lint": "eslint src"
    },
    "keywords": [
        "swissjs",
        "css",
        "css-modules",
        "assets",
        "styling"
    ],
    "author": "Themba Mzumara",
    "license": "MIT",
    "dependencies": {
        "@swissjs/compiler": "workspace:*",
        "postcss": "^8.4.32",
        "lightningcss": "^1.23.0"
    },
    "devDependencies": {
        "typescript": "^5.3.0",
        "vitest": "^1.0.0",
        "@types/node": "^20.10.0"
    },
    "peerDependencies": {
        "@swissjs/compiler": "^0.1.0"
    }
}